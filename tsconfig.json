{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",  
    "baseUrl": ".",  
    "sourceMap": true,
    "pretty": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "src/types"],
  },
  "include": ["src/**/*.ts", "src/types/**/*"], 
  "exclude": [
    "node_modules"
  ]
}